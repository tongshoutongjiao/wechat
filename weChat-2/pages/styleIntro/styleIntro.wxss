
.stylePhoto{
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0rpx;
    background: #C1BE88;

}
.stylePhoto image{
    display: inline-block;
    width: 100%;
    height: 98%;
}

.opinionArea{
    position: absolute;
    width: 100%;
    bottom: 0;
    height: 644rpx;
}
.opinionArea .conBar{
    width: 100%;
    box-sizing: border-box;
    padding: 11rpx 13rpx;
    background:rgba(34,34,34,.9);
}
.opinionArea .conBar .btmBar{
    background:rgba(34,34,34,1);
}


.opinionArea .topBar{
    height: 80rpx;
    position: relative;
}

.opinionArea .issueDate{
    display: inline-block;
    font-size: 12px;
    color: #DDD;
    float: right;
    line-height: 66rpx;
}


/*用户信息*/
.topBar{
    position: relative;
}


.topBar .userInfo{
    display: inline-block;
    font-size: 12px;
    line-height: 66rpx;
    color: #fff;
    position: absolute;
    left: 80rpx;
}

.topBar .userPhoto{
    position: absolute;
    width: 40rpx;
    height: 40rpx;
    border-radius:50% ;
    left: 20rpx;
    top: 52%;
    display:inline-block;
    background-size: cover;
    transform: translateY(-50%);
}



/*发表意见多行输入框*/

.opinionArea .textArea{
    padding:20rpx;
    height: 425rpx;
    background:#ebebeb;
   background-image: url("http://deepfashion.oss-cn-hangzhou.aliyuncs.com/dfshare/areaBg.png");
    background-size:cover ;
}
.opinionArea .textArea .userList{
  height: 180rpx;

}
.opinionArea .textArea .userList .text-c text{
    color: #fff;
}

.opinionArea .textArea textarea{
    font-size: 14px;
    color: #fff;
    opacity: .44;
    width: 100%;
    height: 260rpx;
}
.opinionArea .textArea .userList .text-c text.readNum:before{
    position:relative;
    content:'--';
    left:-20rpx;
    display:inline-block;

}
.opinionArea .textArea .userList .text-c text.readNum:after{
    position:relative;
    content:'--';
    left:20rpx;
    display:inline-block;
}

.opinionArea .textArea .userList .listWrap{
    width: 100%;
    height: 108rpx;
    white-space: nowrap;
    overflow: hidden;
    padding: 16rpx 20rpx;
}
.opinionArea .textArea .userList .listWrap view{
    position: relative;
    color: #fff;
    display: inline-block;
    height: 100rpx;
    width: 96rpx;
    margin-right: 40rpx;
}
.opinionArea .textArea .userList .listWrap .headImg{
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    width: 52rpx;
    height: 52rpx;
    border-radius: 50%;
    background: #fff;
    background-size: cover;
}
.opinionArea .textArea .userList .listWrap view text{
    position: absolute;
    left: 0;
    transform: transllateX(-50%);
    bottom: 0;
    width: 96rpx;
}

/*底部操作栏*/
.opinionArea .btmBar{
    height: 102rpx;
    color: #fff;
    font-size: 16px;
    padding: 0;
    background:rgba(34,34,34,1);
}

.opinionArea .btmBar .leftPart{
    position: relative;
    line-height: 102rpx;
}


.opinionArea .btmBar .leftPart button,.opinionArea .btmBar .rightPart button{
    width:100%;
    height:100%;
    position:absolute;
    border:0;
    color: #fff;
    background: #000;
}




.opinionArea .btmBar .rightPart button{
    width: 50%;
    border-radius: 0;
    height: 102rpx;
}
.opinionArea .btmBar .rightPart wx-button:before{
    position:relative;
    content:'';
    background-size:cover;
    line-height: 102rpx;
    left:-18rpx;
    display:inline-block;
    vertical-align: middle;
    width: 1px;
    background: #fff;
}

.opinionArea .btmBar .leftPart .tapedStyle,.opinionArea .btmBar .rightPart .tapedStyle{
    background: #383434;
}



.opinionArea .btmBar .tapedStyle{
    background: #383434;
}
.opinionArea .completePar{
    padding: 0;
}
.opinionArea .btmBar .complete{
  width: 100%;
    height: 100%;
    border-radius: 0;
    background: #000;
    color: #fff;
}
.opinionArea .btmBar .complete text{
    line-height: 102rpx;
}
.opinionArea .btmBar .tapedStyle{
    background: #383434;
}




.opinionArea .btmBar view{
    display: inline-block;
    height: 90%;
    width: 50%;
    line-height: 86rpx;
}
.opinionArea .btmBar .transfer:before,.opinionArea .btmBar .edit:before{
    position:relative;
    content:'';
    background-size:cover;
    line-height: 102rpx;
    left:-16rpx;
    display:inline-block;
    vertical-align: middle;
}
.opinionArea .btmBar .transfer:before{
    width:32rpx;
    height:26rpx;
    background-image:url("http://bi-workbench.oss-cn-hangzhou.aliyuncs.com/wechat_app/transferIcon.png");
}
.opinionArea .btmBar .edit:before{
    width:28rpx;
    height:28rpx;
    background-image:url("http://bi-workbench.oss-cn-hangzhou.aliyuncs.com/wechat_app/newEditIcon.png");

}
.opinionArea .btmBar .save:before{
    position:relative;
    content:'';
    background-size:cover;
    line-height: 102rpx;
    left:-18rpx;
    display:inline-block;
    vertical-align: middle;
    top: -3rpx;
}
.opinionArea .btmBar .save:before{
    width:40rpx;
    height:40rpx;
    background-image:url("http://bi-workbench.oss-cn-hangzhou.aliyuncs.com/wechat_app/delete1.png");
}

/* 不是创建者样式*/
.opinionArea .btmBar .noAuthor{
    width: 100%;

}




/* 底部弹出框样式*/
action-sheet view,action-sheet-item,action-sheet-cancel{
    line-height: 106rpx;
    font-size: 14px;
    padding: 0;
}
action-sheet-cancel{
    line-height:70rpx ;
}
.deleteBtnIcon{
    color: red;
}




