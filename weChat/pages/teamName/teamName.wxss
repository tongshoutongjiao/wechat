
/*团队页面头部标题栏  */
.container{
   padding: 0rpx;
    background-image: url("http://ruhnnstatic.oss-cn-hangzhou.aliyuncs.com/bigbench/indexBg.png");
    background-size: cover;
    position:absolute;
    top:0;
    bottom:0;
    width:100%;
    height: 100%;
}
/* 季节列表*/
.titleWrapper{
    position: relative;
    margin-top: 94rpx;
    width:100%;
    background: #fff;
    box-sizing: border-box;
    padding-left:30rpx;
    padding-right:30rpx;


}

.titleWrapper image{
    position: absolute;
}
.titleWrapper .rightWrapper{
    position: absolute;
    right:20rpx;
    height: 100%;
    width: 40rpx;
    z-index: 100;

}


.titleWrapper .rightIcon{
    top: 0;
    bottom: 0;
    right: 0;
    margin: auto;
    width:30rpx;
    height:30rpx;
    background-image:url("http://ruhnnstatic.oss-cn-hangzhou.aliyuncs.com/bigbench/forWord.png");
    background-size:cover;
}
.titleWrapper .leftWrapper{
    position: absolute;
    left:20rpx;
    height: 100%;
    width:40rpx;
    z-index:100;

}

.titleWrapper .leftIcon{
    top: 0;
    bottom: 0;
    left: 0;
    margin: auto;
    width:30rpx;
    height:30rpx;
    background-image:url("http://ruhnnstatic.oss-cn-hangzhou.aliyuncs.com/bigbench/back.png ");
    background-size:cover;
}


.seasonTitle{
    opacity:1;
    background:#fff;
    width: 100%;
    white-space: nowrap;
    height: 70rpx;
}


.seasonTitle .seasonName{
    display: inline-block;
    width: 25%;
    opacity: 0.19;
    color: #000;
    text-align: center;
    line-height: 70rpx;
    font-size: 14px;
}
.seasonTitle .active{
    opacity: 1;
}

/* 二级标题栏*/
.secTitle{
    position: absolute;
    top: 0;
    height: 94rpx;
    left: 0;
    right: 0;
    color: #fff;
    font-size: 18px;
    line-height: 94rpx;
    text-align: center;
}
.secTitle view{
    display: inline-block;
}
.secTitle .closeIcon{
    float:left;
    display:inline-block;
    width:26rpx;
    height:26rpx;
    background-image:url("http://ruhnnstatic.oss-cn-hangzhou.aliyuncs.com/bigbench/closeIcon.png");
    background-size:cover;
    margin-top:34rpx;
    margin-left:18rpx;

}


/* 波段部分样式*/

.waveList{
    padding:16rpx;
    position:absolute;
    top:164rpx;
    bottom:0;
    left:5rpx;
    right:5rpx;
    width: auto;
}
.wavePart{
    width: 100%;
    margin-bottom: 16rpx;
    box-sizing: border-box;
    background: #fff;
    border:1px solid #dfdfdf ;

}
.wavePart .titleCon{

    box-sizing: border-box;
    width: 100%;
    padding: 10rpx 20rpx;
}
.wavePart .titleCon image{
    display:inline-block;

    width:30rpx;
    height:30rpx;
    background-image:url("http://ruhnnstatic.oss-cn-hangzhou.aliyuncs.com/bigbench/forWord.png");
    background-size:cover;
    float:right;
    position:absolute;
    top:0;
    right:0;
    bottom:0;
    margin:auto;

}



.waveName{
    width:100%;
    height:160rpx;
    box-sizing:border-box;
    padding:22rpx 18rpx;
    overflow:hidden;
    white-space:nowrap;
}
.waveName .imgWrapper{
    display: inline-block;
    width: 104rpx;
    height:104rpx;
    margin-right: 6rpx;
    box-sizing: border-box;
}
.imgWrapper image{
    width: 100%;
    height: 100%;
    border-radius: 4px;
    display: inline-block;
    background: lightblue;
}

/*添加波段样式*/
.createWave view{
    display: inline-block;
    padding: 28rpx;
}
.createWave view text{
   font-size: 14px;
}

.createImgWrapper{
    width: 114rpx;
    height: 114rpx;
    border-radius: 4rpx;
    text-align: center;
    background: #fff;


    border:1px solid #ddd;
    box-sizing: border-box;
}
.addImage{
    display: inline-block;
    vertical-align: middle;
    width: 58rpx;
    height: 58rpx;
}


/* 波段名字以及上新时间样式*/

.waveCon{
    display: inline-block;
    max-width: 150rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-size: 14px;
    margin-right:30rpx;
    line-height: 24rpx;

}
.waveTime{
    display: inline-block;
    font-size: 14px;
    overflow: hidden;
    line-height: 24rpx;
}
.underLineBorder{
    position: relative;
    border-bottom: 1px solid #dfdfdf;
    padding-bottom: 10rpx;
    padding-top: 10rpx;
}

